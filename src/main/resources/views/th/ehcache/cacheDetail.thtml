<html xmlns:th="http://www.thymeleaf.org">
<head>
	<title>List detailed cache</title>
</head>
<body th:fragment="content">
<div class="debug-ehcache row">
	<a href="#" th:href="@{${@debugWeb.path('/ehcache')}}">back to cache list</a>

	<h3 th:text="${cache.name}">View cache: cache name</h3>

	<div>
		<a th:href="@{${@debugWeb.path('/ehcache/flush')}(cache=${cache.name})}" onclick="return confirm('Are you sure you want to flush this cache?');">flush</a> -
		<a th:href="@{${@debugWeb.path('/ehcache/flush')}(cache=${cache.name},replicate=true)}" onclick="return confirm('Are you sure you want to flush this cache?');">flush and replicate</a> -
		<a th:href="@{${@debugWeb.path('/ehcache/view')}(cache=${cache.name})}">refresh</a>
	</div>

	<div><span th:text="${cacheEntries.size()}">0</span> entries in the cache</div>
	<table th:replace="th/across :: table (${cacheEntries})"/>
</div>

    <div class="clearfix row">
    Cache peers - <a th:href="@{${@debugWeb.path('/ehcache/view')}(cache=${cache.name},listPeers=true)}">show</a>:
        <div th:switch="${cachePeers}">
            <p th:case="'none'"><div>Click 'show' to list the peers</div></p>
            <p th:case="*">
                <ul th:unless="${#lists.isEmpty(cachePeers)}">
                    <li class="cachePeer" th:each="cachePeer : ${cachePeers}"><span th:text="${cachePeer}"></span></li>
                </ul>
                <div th:if="${#lists.isEmpty(cachePeers)}">No cache peers</div>
            </p>
        </div>

    </div>

</body>
</html>