<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="201412291409" author="wtx">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="lm_log_event"/>
				<tableExists tableName="lm_functional_log_event"/>
			</not>
		</preConditions>

		<createTable tableName="lm_log_event">
			<column name="id" type="java.sql.Types.BIGINT">
				<constraints nullable="false" primaryKey="true"/>
			</column>
			<column name="log_type_id" type="java.sql.Types.INTEGER">
				<constraints nullable="false"/>
			</column>
			<column name="time" type="java.sql.Types.TIMESTAMP">
				<constraints nullable="false"/>
			</column>
			<column name="data" type="java.sql.Types.LONGVARCHAR"/>
		</createTable>

		<createTable tableName="lm_functional_log_event">
			<column name="id" type="java.sql.Types.BIGINT">
				<constraints nullable="false" primaryKey="true"/>
			</column>
			<column name="action" type="java.sql.Types.VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="entity" type="java.sql.Types.VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
			<column name="entityId" type="java.sql.Types.BIGINT">
				<constraints nullable="false"/>
			</column>
			<column name="log_user" type="java.sql.Types.VARCHAR(255)">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<addForeignKeyConstraint baseTableName="lm_functional_log_event" baseColumnNames="id"
		                         constraintName="lm_functional_log_event_id"
		                         referencedTableName="lm_log_event" referencedColumnNames="id"/>


		<createTable tableName="lm_technical_log_event">
			<column name="id" type="java.sql.Types.BIGINT">
				<constraints nullable="false" primaryKey="true"/>
			</column>
			<column name="message" type="java.sql.Types.LONGVARCHAR">
				<constraints nullable="false"/>
			</column>
			<column name="level" type="java.sql.Types.INTEGER">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<addForeignKeyConstraint baseTableName="lm_technical_log_event" baseColumnNames="id"
		                         constraintName="lm_technical_log_event_id"
		                         referencedTableName="lm_log_event" referencedColumnNames="id"/>
	</changeSet>

</databaseChangeLog>